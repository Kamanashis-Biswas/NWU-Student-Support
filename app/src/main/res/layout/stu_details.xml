<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:card_view="http://schemas.android.com/tools"
	android:gravity="center"
	android:background="@color/colorPrimaryDark"
	android:orientation="vertical">

	<ScrollView
		android:id="@+id/sc1"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:background="@color/colorPrimary"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal"
				android:padding="8dp">

				<ImageView
					android:id="@+id/icon"
					android:layout_gravity="center"
					app:srcCompat="@drawable/ic_perm_identity_black_24dp"
					android:padding="3dp"
					android:layout_width="43dp"
					android:layout_height="43dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_gravity="bottom"
					android:layout_marginLeft="5dp"
					android:fontFamily="@font/nunitosans_bold"
					android:gravity="center_vertical"
					android:text="Student Details"
					android:textColor="#ffffff"
					android:textSize="22sp"
					android:textStyle="bold" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:orientation="vertical"
				android:paddingBottom="40dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="7dp"
					android:gravity="center"
					android:orientation="vertical">


					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/imgd"
						android:layout_width="120dp"
						android:layout_height="120dp"
						android:layout_gravity="center"
						android:layout_margin="5dp"
						android:src="@drawable/not"
						android:layout_marginTop="25dp"
						android:scaleType="centerCrop"
						app:civ_border_color="@color/colorPrimary"
						app:civ_border_width="4dp" />




				</LinearLayout>


				<androidx.cardview.widget.CardView
					android:layout_width="317dp"
					android:layout_height="44dp"
					android:layout_gravity="center"
					android:layout_margin="5dp"
					android:clickable="false"
					android:foreground="?android:attr/selectableItemBackground"
					app:cardCornerRadius="22dp"
					app:cardElevation="10dp">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginBottom="0dp"
						android:gravity="center"
						android:orientation="vertical">

						<TextView
							android:id="@+id/name"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_gravity="center_horizontal"
							android:layout_marginBottom="0dp"
							android:layout_toRightOf="@+id/image_url"
							android:fontFamily="@font/nunitosans_bold"
							android:gravity="center_horizontal"
							android:text="Loading..."
							android:textColor="@color/colorPrimaryDark"
							android:textSize="28sp"
							android:textStyle="bold" />

					</LinearLayout>
				</androidx.cardview.widget.CardView>


				<androidx.cardview.widget.CardView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:clickable="false"
					android:foreground="?android:attr/selectableItemBackground"
					app:cardCornerRadius="20dp"
					app:cardElevation="15dp">


					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:orientation="vertical">


						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="10dp"
							android:gravity="center_horizontal"
							android:orientation="horizontal">


							<LinearLayout
								android:layout_width="150dp"
								android:layout_height="wrap_content"
								android:layout_margin="4dp"
								android:clickable="true"
								android:foreground="?android:attr/selectableItemBackground"
								android:gravity="center"
								android:orientation="vertical">

								<ImageView
									android:layout_width="30dp"
									android:layout_height="30dp"
									android:layout_gravity="center"
									android:layout_margin="3dp"
									android:layout_marginBottom="3dp"
									android:src="@drawable/blood" />

								<TextView
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_gravity="center_horizontal"
									android:layout_marginBottom="0dp"
									android:layout_toRightOf="@+id/image_url"
									android:fontFamily="sans-serif-condensed-light"
									android:gravity="center_horizontal"
									android:text="Blood Group:"
									android:textColor="@color/colorPrimaryDark"
									android:textSize="19sp"
									android:textStyle="bold" />
								<androidx.cardview.widget.CardView
									android:layout_width="40dp"
									android:layout_height="17dp"
									android:layout_gravity="center"
									android:layout_margin="5dp"
									android:foreground="?android:attr/selectableItemBackground"
									android:gravity="center"
									android:orientation="vertical"
									android:padding="0dp"
									card_view:cardBackgroundColor="@color/colorPrimary"
									card_view:cardCornerRadius="3dp">

								<TextView
									android:id="@+id/blood_group"
									android:layout_width="27dp"
									android:layout_height="23dp"
									android:layout_gravity="center"
									android:layout_marginBottom="2dp"
									android:layout_toRightOf="@+id/image_url"
									android:background="@color/colorPrimary"
									android:fontFamily="@font/nunitosans_bold"
									android:gravity="center_horizontal"
									android:text=""
									android:textColor="#FFFFFF"
									android:textSize="17sp"
									android:textStyle="bold" />
								</androidx.cardview.widget.CardView>

							</LinearLayout>

							<LinearLayout
								android:id="@+id/birthc"
								android:layout_width="150dp"
								android:layout_height="wrap_content"
								android:layout_margin="4dp"
								android:clickable="true"
								android:foreground="?android:attr/selectableItemBackground"
								android:gravity="center"
								android:orientation="vertical">

								<ImageView
									android:layout_width="30dp"
									android:layout_height="30dp"
									android:layout_gravity="center"
									android:layout_margin="3dp"
									android:layout_marginBottom="3dp"
									android:src="@drawable/cake" />

								<TextView
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_gravity="center_horizontal"
									android:layout_marginBottom="0dp"
									android:layout_toRightOf="@+id/image_url"
									android:fontFamily="sans-serif-condensed-light"
									android:gravity="center_horizontal"
									android:text="Birthday:"
									android:textColor="@color/colorPrimaryDark"
									android:textSize="19sp"
									android:textStyle="bold" />

								<TextView
									android:id="@+id/birth"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_gravity="center_horizontal"
									android:layout_marginBottom="0dp"
									android:layout_toRightOf="@+id/image_url"
									android:fontFamily="@font/nunitosans_bold"
									android:gravity="center_horizontal"
									android:text="Loading..."
									android:textSize="17sp"
									android:textStyle="bold" />

							</LinearLayout>

						</LinearLayout>

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="10dp"
							android:gravity="center_horizontal"
							android:orientation="horizontal">

							<LinearLayout
								android:id="@+id/pre_lo"
								android:layout_width="150dp"
								android:layout_height="wrap_content"
								android:layout_margin="4dp"
								android:layout_marginBottom="17dp"
								android:clickable="true"
								android:foreground="?android:attr/selectableItemBackground"
								android:gravity="center"
								android:orientation="vertical">

								<ImageView
									android:layout_width="30dp"
									android:layout_height="30dp"
									android:layout_gravity="center"
									android:layout_margin="3dp"
									android:layout_marginBottom="3dp"
									android:src="@drawable/location" />

								<TextView
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_gravity="center_horizontal"
									android:layout_marginBottom="0dp"
									android:layout_toRightOf="@+id/image_url"
									android:fontFamily="sans-serif-condensed-light"
									android:gravity="center_horizontal"
									android:text="Present Address:"
									android:textColor="@color/colorPrimaryDark"
									android:textSize="18sp"
									android:textStyle="bold" />

								<TextView
									android:id="@+id/present"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_gravity="center_horizontal"
									android:layout_marginBottom="0dp"
									android:layout_toRightOf="@+id/image_url"
									android:fontFamily="@font/nunitosans_bold"
									android:gravity="center_horizontal"
									android:text="Loading..."
									android:textSize="15sp"
									android:textStyle="bold" />

							</LinearLayout>

							<LinearLayout
								android:id="@+id/town"
								android:layout_width="150dp"
								android:layout_height="wrap_content"
								android:layout_margin="4dp"
								android:clickable="true"
								android:foreground="?android:attr/selectableItemBackground"
								android:gravity="center"
								android:orientation="vertical">

								<ImageView
									android:layout_width="30dp"
									android:layout_height="30dp"
									android:layout_gravity="center"
									android:layout_margin="3dp"
									android:layout_marginBottom="3dp"
									android:src="@drawable/place" />

								<TextView
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_gravity="center_horizontal"
									android:layout_marginBottom="0dp"
									android:layout_toRightOf="@+id/image_url"
									android:fontFamily="sans-serif-condensed-light"
									android:gravity="center_horizontal"
									android:text="Home Town:"
									android:textColor="@color/colorPrimaryDark"
									android:textSize="18sp"
									android:textStyle="bold" />

								<TextView
									android:id="@+id/home"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_gravity="center_horizontal"
									android:layout_marginBottom="0dp"
									android:layout_toRightOf="@+id/image_url"
									android:fontFamily="@font/nunitosans_bold"
									android:gravity="center_horizontal"
									android:text="Loading..."
									android:textSize="15sp"
									android:textStyle="bold" />

							</LinearLayout>

						</LinearLayout>

					</LinearLayout>
				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:layout_width="317dp"
					android:layout_height="70dp"
					android:layout_gravity="center"
					android:layout_marginBottom="40dp"
					android:clickable="false"
					android:foreground="?android:attr/selectableItemBackground"
					app:cardCornerRadius="35dp"
					app:cardElevation="15dp">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:gravity="center_horizontal"
						android:orientation="horizontal">

						<LinearLayout
							android:id="@+id/fbx"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="25dp"
							android:clickable="true"
							android:foreground="?android:attr/selectableItemBackground"
							android:orientation="horizontal"
							android:padding="10dp"
							android:shape="ring">

							<ImageView
								android:id="@+id/fb"
								android:layout_width="46dp"
								android:layout_height="46dp"
								android:layout_gravity="left|center"
								android:layout_margin="3dp"
								android:layout_marginTop="5dp"
								android:src="@drawable/facebook" />

						</LinearLayout>

						<LinearLayout
							android:id="@+id/callx"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="25dp"
							android:clickable="true"
							android:foreground="?android:attr/selectableItemBackground"
							android:orientation="horizontal"
							android:padding="10dp"
							android:shape="ring">

							<ImageView
								android:id="@+id/call"
								android:layout_width="50dp"
								android:layout_height="50dp"
								android:layout_gravity="left|center"
								android:layout_margin="3dp"
								android:layout_marginTop="5dp"
								android:src="@drawable/call_2" />

						</LinearLayout>

						<LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
							android:id="@+id/messx"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:clickable="true"
							android:foreground="?android:attr/selectableItemBackground"
							android:orientation="horizontal"
							android:padding="10dp"
							android:shape="ring">

							<ImageView
								android:id="@+id/mess"
								android:layout_width="50dp"
								android:layout_height="50dp"
								android:layout_gravity="left|center"
								android:layout_margin="3dp"
								android:layout_marginTop="5dp"
								android:src="@drawable/messenger" />

						</LinearLayout>

					</LinearLayout>
				</androidx.cardview.widget.CardView>

			</LinearLayout>

		</LinearLayout>

	</ScrollView>

</LinearLayout>

