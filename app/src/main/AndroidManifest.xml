<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nwu.studentsupport">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity android:name="com.nwu.studentsupport.Activity.UpdateClassEditActivity" />
        <activity android:name="com.nwu.studentsupport.Activity.ClassUpdateActivity"
            android:label="Class Update"
            />
        <activity
            android:name="com.nwu.studentsupport.Activity.MainActivity"
            android:label="@string/app_name" />
        <activity android:name="com.nwu.studentsupport.Activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nwu.studentsupport.Activity.SlybsActivity"
            android:label="CSE Syllabus of NWU" />
        <activity
            android:name="com.nwu.studentsupport.Activity.StudentDetailsActivity"
            android:label="Student Details" />
        <activity
            android:name="com.nwu.studentsupport.Activity.SingUpActivity"
            android:label="Sing Up" />
        <activity
            android:name="com.nwu.studentsupport.Activity.RoutineActivity"
            android:label="Class Routine" />
        <activity
            android:name="com.nwu.studentsupport.Activity.AboutActivity"
            android:label="About Me" />
        <activity
            android:name="com.nwu.studentsupport.Activity.StudentListActivity"
            android:label="Students List">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@layout/searchable" />
        </activity>
        <activity
            android:name="com.nwu.studentsupport.Activity.TeacherListActivity"
            android:label="Teachers List">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@layout/searchable" />
        </activity>
    </application>

</manifest>